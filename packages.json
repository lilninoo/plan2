    "@wordpress/scripts": "^26.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "sass": "^1.60.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "fullcalendar": "^6.1.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperplanning/wordpress-plugin.git"
  },
  "bugs": {
